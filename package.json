{
  "name": "mp4-to-audio-converter",
  "productName": "MP4 to Audio Converter",
  "version": "1.0.0",
  "description": "Conversor offline de vídeos MP4 para áudio MP3/WAV",
  "author": "Sua Autoria",
  "main": "electron.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && xcopy /E /I /Y public dist\\public",
    "preview": "vite preview",
    "start": "node server.cjs",
    "package": "npm run build && pkg server.cjs --targets node18-win-x64 --output mp4-audio-converter.exe --assets \"dist/**/*\""
  },
  "pkg": {
    "assets": [
      "dist/**/*"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.1",
    "express": "^5.1.0",
    "open": "^10.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.17",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "pkg": "^5.8.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.minhaautoria.mp4converter",
    "productName": "MP4 to Audio Converter",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.cjs",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MP4 to Audio Converter"
    }
  }
}
